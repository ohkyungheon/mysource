<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Display">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_sos"
            android:layout_width="1080dp"
            android:layout_height="100dp"
            android:background="#F8F7F7"
            android:text=" SoS service"
            android:textAllCaps="true"
            android:textColorHighlight="#F6F4F4"
            android:textColorLink="#FFFFFF"
            android:textSize="60sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_call"
                android:layout_width="410dp"
                android:layout_height="150dp"
                android:text="SoS"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="1622dp" />

            <Button
                android:id="@+id/btn_back"
                android:layout_width="410dp"
                android:layout_height="150dp"
                android:text="뒤로가기"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="1117dp"
                tools:layout_editor_absoluteY="2020dp" />

            <Button
                android:id="@+id/btn_led"
                android:layout_width="410dp"
                android:layout_height="150dp"
                android:text="LED ON / OFF"
                android:textSize="36sp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="-1dp"
                tools:layout_editor_absoluteY="987dp" />

            <Button
                android:id="@+id/btn_gps"
                android:layout_width="410dp"
                android:layout_height="150dp"
                android:text="GPS 위치 추적"
                android:textSize="36sp"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="342dp" />

</LinearLayout>